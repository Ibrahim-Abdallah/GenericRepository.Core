<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>

		<PackageId>GenericRepository.Core</PackageId>
		<Version>1.0.0</Version>
		<Authors>Ibrahim Abdallah Alkholy</Authors>
		<Company>Geeks Coder Solutions</Company>
		<Description>A clean and reusable generic repository pattern for EF Core</Description>
		<PackageTags>Repository EFCore CleanArchitecture</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		
		<RepositoryUrl>https://github.com/Ibrahim-Abdallah/GenericRepository.Core</RepositoryUrl>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.EntityFrameworkCore" Version="9.0.4" />
	</ItemGroup>

</Project>
